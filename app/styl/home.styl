header
	background-linear-gradient(top, transparent, 60%, #232323, 85%)
	> div
		size(100%, 20vh)
		display table
		&:first-child
			height 80vh
	.logo
		background url('../img/logo.png')
		background-position center
		background-repeat no-repeat
		background-size auto 60%
	.ct-button
		a 
			display block
			width 150px
			margin 25px auto
			text-align center
			padding 10px 15px
			background #232323
			font-weight 300
			color white
			border 1px dashed bege
			border-radius 10px
			trs()
			&:hover
				border 1px dashed #232323
				color white
				background-linear-gradient(top, #9F101A, 25%, #741014, 75%)

				


