@import 'mixins'


html, body, h1, h2, h3, h4, h5, h6, p
	margin 0
	padding 0
	font-family mf

a 
	text-decoration none
	color inherit

section 
	size(100%, 99vh)
	display table
	background-color #232323
	&:first-child
		background url('../img/bg-bacon.png')
		background-size cover
		background-color #232323

